vunit counter_properties(counter) {

    property upper_bound is (always (Q <= MAX_COUNT)) @rising_edge(clk);

    property counting_up is (always (not (rst = '1') and (not prev(rst) = '1') and (prev(Q) /= MAX_COUNT)) -> (Q-prev(Q) = 1)) @rising_edge(clk);

}

