vunit handshake (handshake) {

    -- Default clock for PSL assertions
    default clock is rising_edge(a_clk);

    -- Cover a request crossing from A to B
    req_from_a_to_b: cover {a_req_in = '1'; true[*]; b_req_out = '1'};

    -- Cover an acknowledgement crossing from B to A
    ack_from_b_to_a: cover {b_ack_in = '1'; true[*]; a_ack_out = '1'};

}

